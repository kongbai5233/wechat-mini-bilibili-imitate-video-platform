/* page/index/index.wxss */

swiper{
  width: 100vw;
  height: 30vh;
}
.content{
  width: 100vw;
  display: flex;
  flex-wrap: wrap;
  justify-content:flex-start;
}
.swiper_image{
  width: 100%;
  height: 100%;
}
.content_list{
  box-sizing: border-box;
  height: 30vh;
  margin-top: 12rpx;
  margin-left:12rpx;
  margin-right: 12rpx;
  width: 47vw;
  border: 2rpx black solid;
  overflow: hidden;
  display: flex;
  flex-direction: column;
  justify-items: center;
  text-align: center;
}
.content_list:nth-child(2n){
  margin-left: 10rpx;
  margin-right: 0rpx;
}
.content_list text{
color: blue;
}
.img{
  width: 47vw;
  height: 24vh;
  margin-bottom: 5rpx;
}